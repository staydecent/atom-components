{
  "name": "atom-components",
  "version": "1.0.0",
  "description": "Reusable Preact Components that sometimes come with Atom Actions and Reducers.",
  "main": "brunch-config.js",
  "scripts": {
    "test": "npm run std",
    "start": "brunch watch --server",
    "prebuild": "npm run std",
    "build": "brunch build --production",
    "std": "standard --verbose | snazzy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/staydecent/atom-components.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/staydecent/atom-components/issues"
  },
  "homepage": "https://github.com/staydecent/atom-components#readme",
  "dependencies": {
    "atom": "1.1.0",
    "check-arg-types": "1.1.0",
    "classless-component": "0.1.0",
    "preact": "8.2.1",
    "preact-portal": "1.1.2"
  },
  "devDependencies": {
    "auto-reload-brunch": "^2.7.1",
    "babel-brunch": "~6.1",
    "babel-plugin-jsx-import": "staydecent/babel-plugin-jsx-import",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-es2015-spread": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "~6.24",
    "brunch": "^2",
    "less-brunch": "^2.10.0",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0"
  },
  "engines": {
    "npm": ">=3.0.0",
    "node": ">=6.0.0 <=8.1"
  },
  "standard": {
    "globals": [
      "Preact"
    ],
    "ignore": [
      "build"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "selector-list-comma-newline-after": null,
      "number-leading-zero": null
    }
  }
}
